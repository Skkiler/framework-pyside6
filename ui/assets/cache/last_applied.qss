/*base.qss*/

/* =========================
   BASE VISUAL / TIPOGRAFIA
   ========================= */
QMainWindow, QWidget#RootWindow, QDialog {
  background: qlineargradient(x1:0,y1:0,x2:0,y2:1, stop:0 #0b0b0b, stop:1 #1a1a1a);
  color: #ffffff;
  font-family: 'Segoe UI', Arial, sans-serif;
  font-size: 12px;
}

/* Textos padrão */
QWidget, QLabel { color: #ffffff; }

/* =========================
   OVERLAYS
   ========================= */
#Scrim { background: rgba(0,0,0,0.35); }

/* =========================
   BARRA SUPERIOR / PAINÉIS
   ========================= */
#TopBar {
  background: #090909;
  border-bottom: 1px solid #419644;
  border-top-left-radius: 10px;
  border-top-right-radius: 10px;
}

/* SidePanel */
#SidePanel {
  background: #090909;
  border-right: 1px solid #419644;
  border-top-left-radius: 12px;
  border-bottom-left-radius: 12px;
  /* novo: canto superior-direito suavizado */
  border-top-right-radius: 8px;
}
#SidePanelHeader {
  font-weight: 600;
  margin-left: 6px;
  color: #ffffff;
  padding: 6px 8px;
}

/* “caixinha” do hambúrguer na overlay */
#SidePanel QToolButton {
  color: #ffffff;
  background: transparent;
  padding: 6px 8px;
  border: 1px solid #419644;
  border-radius: 8px;
}
#SidePanel QToolButton:hover { background: #ff8454; }

/* =========================
   CARDS / PANÉIS / OUTROS
   ========================= */
QGroupBox,
QFrame#OuterPanel,
QWidget[elevation="panel"] {
  background: #090909;
  border: 1px solid #419644;
  border-radius: 12px;
}
QGroupBox::title {
  subcontrol-origin: content;
  subcontrol-position: top left;
  left: 12px;
  top: -10px;
  background: transparent;
  color: #ffffff;
  font-weight: 600;
  font-size: 12px;
  padding: 0 6px;
}

/* =========================
   LISTAS / VIEWS / COMBOS
   ========================= */

/* QListWidget (fechado) – bordas apenas no topo */
QListWidget {
  background: #151515;
  border: 1px solid #419644;
  border-top-left-radius: 10px;
  border-top-right-radius: 10px;
  border-bottom-left-radius: 0;
  border-bottom-right-radius: 0;
  color: #ffffff;
  padding: 4px;
}

QListWidget::item {
  padding: 8px 10px;
  margin: 3px 4px;
  border-radius: 8px;
  border: none;
}
QListWidget::item:hover   { background: #ff7043;  border: none; }
QListWidget::item:selected{
  background: #ff7043;
  color: #ffffff;
  border: none;
  border-radius: 8px;
}

/* Seleção mais suave dentro da sidebar */
#SidePanel QListWidget::item:selected {
  background: #ff8454;
  border-radius: 8px;
}

/* -------------------------
   QComboBox (fechado)
   (leve ajuste do drop-down)
   ------------------------- */
QComboBox {
  background: #151515;
  color: #ffffff;
  border: 1px solid #419644;
  border-top-right-radius: 10px;
  border-top-left-radius: 10px;
  border-bottom-right-radius: 0;
  border-bottom-left-radius: 0;
  padding: 5px 8px;
}
QComboBox::drop-down {
  border: 1px solid transparent;
  background: transparent;
  border-top-right-radius: 10px;
  border-bottom-right-radius: 0;
}

/* ===== Popup do Combo (lista aberta) ===== */
QComboBox QAbstractItemView,
QComboBox QAbstractItemView::viewport,
QComboBox QListView,
QComboBox QListView::viewport,
QComboBox QTreeView,
QComboBox QTreeView::viewport {
  background: #151515;
  color: #ffffff;
  border: 1px solid #419644;

  /* igual ao Combo: borda continua */
  border-top: none;
  border-top-left-radius: 0;
  border-top-right-radius: 0;
  border-bottom-left-radius: 10px;
  border-bottom-right-radius: 10px;

  margin-top: -1px;
  padding: 0;
}

/* Itens (sem contorno do foco) e com hover/seleção limpa */
QComboBox QListView::item,
QComboBox QTreeView::item {
  outline: 0;
  border: none;
  padding: 6px 10px;      /* espaço interno dos itens */
  border-radius: 6px;     /* arredonda o fundo do item (hover/selected) */
}

QComboBox QListView::item:selected,
QComboBox QTreeView::item:selected {
  background: #ff7043;
  color: #ffffff;
  border-radius: 6px;
}

QComboBox QAbstractItemView {
  min-width: 100%;
}

/* Scrollbar fininha no popup */
QComboBox QScrollBar:vertical,
QComboBox QScrollBar:horizontal {
  background: transparent;
  width: 6px; height: 6px;
  margin: 2px;
  border: none;
}
QComboBox QScrollBar::handle:vertical,
QComboBox QScrollBar::handle:horizontal {
  background: #419644;
  border-radius: 3px;
  min-height: 18px; min-width: 18px;
}
QComboBox QScrollBar::add-line,
QComboBox QScrollBar::sub-line,
QComboBox QScrollBar::add-page,
QComboBox QScrollBar::sub-page {
  background: transparent;
  border: none;
}

/* =========================
   INPUTS
   ========================= */
QLineEdit, QTextEdit, QPlainTextEdit {
  background: #151515;
  color: #ffffff;
  border: 1.2px solid #419644;
  border-radius: 10px;
  padding: 5px 8px;
}

/* =========================
   BOTÕES
   ========================= */
QPushButton {
  background: #e53935;
  color: #ffffff;
  border-radius: 8px;
  padding: 7px 16px;
  border: none;
}
QPushButton:hover   { background: #ff7043; }
QPushButton:pressed { background: #ff7043; }
QPushButton:disabled { background: #151515; color: #419644; }

/* Primário / Secundário / Ghost / Chip */
QPushButton[variant="primary"]   { background: #ff7043; color: #ffffff; font-weight: 600; }
QPushButton[variant="primary"]:hover { background: #ff7043; }
QPushButton[variant="secondary"] { background: transparent; color: #4aac4d; border: 1.4px solid #4aac4d; }
QPushButton[variant="secondary"]:hover { background: #ff7043; }
QPushButton[variant="ghost"]     { background: transparent; color: #ffffff; border: none; }
QPushButton[variant="ghost"]:hover { background: rgba(255,255,255,0.05); }
QPushButton[variant="chip"]      { background: #151515; border: 1px solid #419644; border-radius: 16px; padding: 4px 10px; font-size: 11px; }
QPushButton[variant="chip"]:hover { background: #ff7043; color: #ffffff; }

/* =========================
   CHECKBOX / RADIO
   ========================= */
QCheckBox::indicator, QRadioButton::indicator {
  width: 18px; height: 18px;
  border-radius: 9px;
  border: 1px solid #419644;
  background: #151515;
  margin-right: 6px;
}
QCheckBox::indicator:checked, QRadioButton::indicator:checked {
  background: #4aac4d;
  border: 1px solid #4aac4d;
}

/* =========================
   SWITCH (fallback visual compacto)
   ========================= */
QCheckBox[switch="true"]::indicator {
  width: 30px; height: 18px; border-radius: 9px;
  background: #151515;
  border: 1px solid #419644;
  position: relative;
}
QCheckBox[switch="true"]::indicator:checked {
  background: #ff7043;
  border: 1px solid #ff7043;
}

QCheckBox[switch="true"]::indicator:checked:before,
QCheckBox[switch="true"]::indicator:unchecked:before {
  content: '';
  width: 16px; height: 16px;
  background: #ffffff;
  border-radius: 8px;
  position: absolute;
  top: 1px; left: 1px;
  transition: all 0.18s ease;
}
QCheckBox[switch="true"]::indicator:checked:before {
  left: 13px;
}
ToggleSwitch {
  qproperty-offBg:    #1a1a1a;    /* fundo trilho inativo */
  qproperty-offKnob:  #0b0b0b;  /* botão inativo */
  qproperty-onBg:     #ff5722;    /* fundo trilho ativo */
  qproperty-onKnob:   #4aac4d;  /* botão ativo */
}

/* =========================
   SLIDER / PROGRESS (mais fino e suave)
   ========================= */
QSlider::groove:horizontal {
  height: 6px; border-radius: 3px;
  background: #151515;
}
QSlider::sub-page:horizontal {
  background: #ff5722;
  height: 6px; border-radius: 3px;
}
QSlider::handle:horizontal {
  background: #ff7043;
  width: 14px; height: 14px;
  border-radius: 7px;
  margin: -4px 0;                /* deixa o “pino” centralizado no trilho */
  transition: all 120ms ease;
}
QSlider::handle:horizontal:hover {
  width: 16px; height: 16px;     /* responde ao hover */
  margin: -5px 0;
}

QProgressBar {
  background: #151515;
  border-radius: 10px;
  text-align: center;
  color: #ffffff;
  font-weight: bold;
  height: 20px;
}
QProgressBar::chunk { background: #ff5722; border-radius: 10px; }

/* =========================
   TABELAS
   ========================= */
QTableWidget {
  background: #0b0b0b;
  border: 1px solid #419644;
  border-radius: 10px;
  gridline-color: #419644;
  color: #ffffff;
}
QTableWidget::item:selected { background: #ff8454; color: #ffffff; border-radius: 8px; }
QHeaderView::section {
  background: #151515; color: #ffffff;
  border: none; padding: 6px 8px;
  font-weight: bold; font-size: 12px;
}

/* =========================
   SCROLLBARS (finas)
   ========================= */
QScrollBar:vertical, QScrollBar:horizontal {
  background: #151515;
  border: 0;
  width: 8px; height: 8px;        /* mais finas */
  margin: 0;
}
QScrollBar::handle:vertical, QScrollBar::handle:horizontal {
  background: #419644;
  border-radius: 4px;
  min-height: 20px; min-width: 20px;
}
QScrollBar::add-line, QScrollBar::sub-line,
QScrollBar::add-page, QScrollBar::sub-page {
  background: transparent;
  border: none;
}

/* =========================
   TOOLTIP
   ========================= */
QToolTip {
  background: #151515;
  color: #ffffff;
  border: 1px solid #419644;
  padding: 4px 6px;
  border-radius: 8px;
}

/* =========================
   LOADING OVERLAY
   ========================= */
QWidget#LoadingOverlay {
  background: transparent;         /* overlay transparente (bloqueia só por estar em cima) */
}

QFrame#LoadingPanel {
  /* painel central: mesma cor do 'slider' com ~20% de opacidade */
  background: rgba(74,172,77,0.05);
  border: 1px solid #419644;
  border-radius: 12px;
}

QFrame#LoadingPanel QLabel {
  color: #ffffff;               /* texto visível sobre o overlay */
}
